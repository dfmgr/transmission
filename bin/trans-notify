#!/usr/bin/env bash
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
APPNAME="trans-notify"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"
SRC_DIR="${BASH_SOURCE%/*}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
#set opts

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version       : 031120212101-git
# @Author        : Jason Hempstead
# @Contact       : jason@casjaysdev.com
# @License       : WTFPL
# @ReadME        : trans-notify --help
# @Copyright     : Copyright: (c) 2021 Jason Hempstead, CasjaysDev
# @Created       : Thursday, Mar 11, 2021 21:01 EST
# @File          : trans-notify
# @Description   : transmission notification script.
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# helper function
__help() {
  printf_help "Usage:  trans-notify |  trans-notify "
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main function
main() {
  [ -f "$SRC_DIR/functions.bash" ] && local DIR="$SRC_DIR" || local DIR="$HOME/.local/bin"
  if [[ -f "$DIR/functions.bash" ]]; then
    . "$DIR/functions.bash"
  else
    printf "\t\t\\033[0;31m%s \033[0m\n" "Couldn't source the functions file from $DIR"
    return 1
  fi
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  [ "$1" = "--help" ] && __help
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  if [ -"$HOME/.config/transmission/settings.json" ]; then
    local dldir="$(grep download-dir "$HOME/.config/transmission/settings.json" | sed 's#[,"]##g' | awk '{print $2}')"
    notifications "Transmission" "$TR_TORRENT_NAME has been ðŸ”½ to $dldir"
    # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
    if [ -n "$PUSHBULLET_ACCESS_TOKEN" ]; then
      curl -LSsq -u "$PUSHBULLET_ACCESS_TOKEN": \
        --header 'Content-Type: application/json' \
        -X POST https://api.pushbullet.com/v2/pushes \
        -d "{\"type\": \"note\", \"title\": \"Torrent has ðŸ”½ on $HOSTNAME\", \"body\": \"$TR_TORRENT_NAME has been downloaded to $dldir.\"}" \
        >/dev/null && echo ""
    fi
  else
    exitCode=1
  fi
  return "${exitCode:-$?}"
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# execute function
main "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
exit $?
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# end
