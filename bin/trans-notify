# @Created       : Tuesday, Mar 16, 2021 07:28 EDT
# @File          : trans-notify
# @Description   : Transmission download completion notification script
# @Changelog     : Refactored for self-contained operation
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Script variables
PROG="trans-notify"
VERSION="202501060000-git"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Environment Detection
__get_os() {
  case "$(uname -s)" in
    Linux*) echo "linux" ;;
    Darwin*) echo "mac" ;;
    *BSD*) echo "bsd" ;;
    MINGW*|MSYS*|CYGWIN*) echo "windows" ;;
    *) echo "unknown" ;;
  esac
}

__is_remote() {
  [ -n "${SSH_CLIENT:-}" ] || [ -n "${SSH_TTY:-}" ] || [ -n "${SSH_CONNECTION:-}" ]
}

__has_display() {
  [ -n "${DISPLAY:-}" ] || [ -n "${WAYLAND_DISPLAY:-}" ]
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Core helper functions
__cmd_exists() { command -v "$1" >/dev/null 2>&1; }

__printf_color() {
  local color="${2:-0}"
  printf "\033[0;%sm%s\033[0m\n" "$color" "$1"
}
__printf_red() { __printf_color "$1" "31"; }
__printf_green() { __printf_color "$1" "32"; }
__printf_yellow() { __printf_color "$1" "33"; }
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Network check
__am_i_online() {
  ping -c1 -W2 1.1.1.1 >/dev/null 2>&1 && return 0
  ping -c1 -W2 8.8.8.8 >/dev/null 2>&1 && return 0
  curl -sf --max-time 3 https://1.1.1.1 >/dev/null 2>&1 && return 0
  return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Smart notifications
__notifications() {
  local title="$1" msg="$2"

  # Remote/no display - just print to stderr
  if __is_remote || ! __has_display; then
    printf "[%s] %s\n" "$title" "$msg" >&2
    return 0
  fi

  # GUI notifications based on OS
  case "$(__get_os)" in
    mac)
      osascript -e "display notification \"$msg\" with title \"$title\"" 2>/dev/null && return 0
      ;;
    linux|bsd)
      if __cmd_exists notify-send; then
        notify-send "$title" "$msg" 2>/dev/null && return 0
      fi
      ;;
    windows)
      if __cmd_exists powershell.exe; then
        powershell.exe -Command "Add-Type -AssemblyName System.Windows.Forms; [System.Windows.Forms.MessageBox]::Show('$msg', '$title')" 2>/dev/null && return 0
      fi
      ;;
  esac

  # Fallback
  printf "[%s] %s\n" "$title" "$msg" >&2
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# PushBullet notification
__pushbullet_notify() {
  local title="$1" body="$2"
  local token="${PUSHBULLET_ACCESS_TOKEN:-}"

  if [ -z "$token" ]; then
    return 1
  fi

  if ! __am_i_online; then
    return 1
  fi

  curl -q -LSs -u "$token": \
    --header 'Content-Type: application/json' \
    -X POST https://api.pushbullet.com/v2/pushes \
    -d "{\"type\": \"note\", \"title\": \"$title\", \"body\": \"$body\"}" >/dev/null 2>&1
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Version and help
__version() { echo "$PROG $VERSION"; }

__help() {
  cat <<EOF
$PROG $VERSION - Transmission completion notification

Usage: $PROG [options]

Options:
  -v, --version    Show version
  -h, --help       Show this help

Environment:
  TR_TORRENT_NAME          Torrent name (set by transmission-daemon)
  PUSHBULLET_ACCESS_TOKEN  PushBullet API token for remote notifications

Description:
  Called by transmission-daemon when a torrent completes downloading.
  Configure in settings.json with script-torrent-done-enabled and
  script-torrent-done-filename settings.
EOF
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main function
main() {
  local exitCode=0

  # Parse options
  case "${1:-}" in
    -v|--version) __version; exit 0 ;;
    -h|--help) __help; exit 0 ;;
  esac

  # Get torrent name from environment (set by transmission-daemon)
  local NAME="${TR_TORRENT_NAME:-A torrent}"
  local dldir=""

  # Get download directory from transmission settings
  local settings_file="$HOME/.config/transmission/settings.json"
  if [ ! -f "$settings_file" ]; then
    settings_file="$HOME/.config/transmission-daemon/settings.json"
  fi

  if [ -f "$settings_file" ]; then
    dldir="$(grep -s 'download-dir' "$settings_file" | sed 's#[,"]##g' | awk '{print $2}')"
    __notifications "Transmission" "$NAME has been downloaded to $dldir"

    # Send PushBullet notification if configured and online
    if [ -n "${PUSHBULLET_ACCESS_TOKEN:-}" ] && __am_i_online; then
      __pushbullet_notify "Torrent completed on ${HOSTNAME:-localhost}" "$NAME has been downloaded to $dldir."
    fi
  else
    __notifications "Transmission" "$NAME download complete"
    __printf_yellow "Warning: Could not find transmission settings.json"

    # Still try PushBullet
    if [ -n "${PUSHBULLET_ACCESS_TOKEN:-}" ] && __am_i_online; then
      __pushbullet_notify "Torrent completed on ${HOSTNAME:-localhost}" "$NAME download complete"
    fi
  fi

  return "$exitCode"
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute
main "$@"
exit $?
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# end
