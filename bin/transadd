#!/usr/bin/env bash
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
APPNAME="transadd"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"
SRC_DIR="${BASH_SOURCE%/*}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
#set opts

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version       : 031120212054-git
# @Author        : Jason Hempstead
# @Contact       : jason@casjaysdev.com
# @License       : WTFPL
# @ReadME        : transadd --help
# @Copyright     : Copyright: (c) 2021 Jason Hempstead, CasjaysDev
# @Created       : Thursday, Mar 11, 2021 20:54 EST
# @File          : transadd
# @Description   : Mimeapp script for adding torrent to transmission-daemon.
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# helper function
__help() {
  printf_help "Usage:  transadd torrent  |  transadd path/to/torrent/file"
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main function
main() {
  [ -f "$SRC_DIR/functions.bash" ] && local DIR="$SRC_DIR" || local DIR="$HOME/.local/bin"
  if [[ -f "$DIR/functions.bash" ]]; then
    . "$DIR/functions.bash"
  else
    printf "\t\t\\033[0;31m%s \033[0m\n" "Couldn't source the functions file from $DIR"
    return 1
  fi
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  [ "$1" = "--help" ] && __help
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  if [ "$1" = "" ]; then
    notifications "Transmission" "Error: No torrent file recieved"
    exit 1
  fi
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  local SERVER="${TORRENT_SERVER:-localhost}:9091"
  if [ -f "$(command -v transmission-daemon 2>/dev/null)" ]; then
    if ! pgrep -x transmission-da &>/dev/null; then
      transmission-daemon &
      notifications "Transmission" "Starting transmission daemon..."
      sleep 3
    fi
    transmission-remote "$SERVER" -a "$@" &>/dev/null
    exitCode="$?" && sleep 10
    if [ "$exitCode" -eq 0 ]; then
      notifications "Transmission" "ðŸ”½ Torrent added."
    else
      notifications "Transmission" "ðŸ”½ Torrent failed."
    fi
  elif [ -f "$(command -v transmission-remote-gtk 2>/dev/null)" ]; then
    if ! pgrep -x transmission-re &>/dev/null; then
      transmission-remote-gtk &>/dev/null &
      notifications "Transmission" "Starting transmission gui..."
      sleep 3
    fi
    transmission-remote-gtk "$@" 2>/dev/null
    exitCode="$?" && sleep 10
  elif [ -f "$(command -v transmission-gtk 2>/dev/null)" ]; then
    if ! pgrep -x transmission-gt &>/dev/null; then
      transmission-gtk &
      notifications "Transmission" "Starting transmission gui..."
      sleep 3
    fi
    transmission-gtk "$@" &>/dev/null
    exitCode="$?" && sleep 10
    if [ "$exitCode" -eq 0 ]; then
      notifications "Transmission" "ðŸ”½ Torrent added."
    else
      notifications "Transmission" "ðŸ”½ Torrent failed."
    fi
  else
    exitCode=1
  fi
  return "${exitCode:-$?}"
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# execute function
main "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
exit $?
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# end
