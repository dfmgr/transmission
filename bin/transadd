#!/usr/bin/env bash

SCRIPTNAME="$(basename $0)"
SCRIPTDIR="$(dirname "${BASH_SOURCE[0]}")"
USER="${SUDO_USER:-${USER}}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# @Author      : Jason
# @Contact     : casjaysdev@casjay.net
# @File        : td-toggle
# @Created     : Wed, Feb 26, 2020, 00:00 EST
# @License     : WTFPL
# @Copyright   : Copyright (c) CasjaysDev
# @Description : Mimeapp script for adding torrent to transmission-daemon
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Set functions

SCRIPTSFUNCTURL="${SCRIPTSAPPFUNCTURL:-https://github.com/dfmgr/installer/raw/master/functions}"
SCRIPTSFUNCTDIR="${SCRIPTSAPPFUNCTDIR:-/usr/local/share/CasjaysDev/scripts}"
SCRIPTSFUNCTFILE="${SCRIPTSAPPFUNCTFILE:-applications.bash}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

if [ -f "../functions/$SCRIPTSFUNCTFILE" ]; then
  . "../functions/$SCRIPTSFUNCTFILE"
elif [ -f "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE"
else
  curl -LSs "$SCRIPTSFUNCTURL/$SCRIPTSFUNCTFILE" -o "/tmp/$SCRIPTSFUNCTFILE" || exit 1
  . "/tmp/$SCRIPTSFUNCTFILE"
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

if [ "$1" = "" ]; then
  notifications "Transmission" "Error: No torrent file recieved"
  exit 1
fi

if cmd_exists transmission-daemon; then
  if ! pgrep -x transmission-da >/dev/null >&1; then
    transmission-daemon &
    notifications "Transmission" "Starting transmission daemon..."
    sleep 3
  fi
  transmission-remote -a "$@"
  RETV="$?" && sleep 10
  if [ "$RETV" -eq 0 ]; then
    notifications "Transmission" "ðŸ”½ Torrent added."
  else
    notifications "Transmission" "ðŸ”½ Torrent failed."
  fi
elif cmd_exists transmission-gtk; then
  if ! pgrep -x transmission-gt >/dev/null >&1; then
    transmission-gtk &
    notifications "Transmission" "Starting transmission gui..."
    sleep 3
  fi
  transmission-gtk "$@"
  RETV="$?" && sleep 10
  if [ "$RETV" -eq 0 ]; then
    notifications "Transmission" "ðŸ”½ Torrent added."
  else
    notifications "Transmission" "ðŸ”½ Torrent failed."
  fi

fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# end
