#!/usr/bin/env bash
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
APPNAME="trans-status"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"
SRC_DIR="${BASH_SOURCE%/*}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
#set opts

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version       : 031120212105-git
# @Author        : Jason Hempstead
# @Contact       : jason@casjaysdev.com
# @License       : WTFPL
# @ReadME        : trans-status --help
# @Copyright     : Copyright: (c) 2021 Jason Hempstead, CasjaysDev
# @Created       : Thursday, Mar 11, 2021 21:05 EST
# @File          : trans-status
# @Description   : transmission status script.
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# helper function
__help() {
  printf_help "Usage:  trans-status |  trans-status "
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main function
main() {
  [ -f "$SRC_DIR/functions.bash" ] && local DIR="$SRC_DIR" || local DIR="$HOME/.local/bin"
  if [[ -f "$DIR/functions.bash" ]]; then
    . "$DIR/functions.bash"
  else
    printf "\t\t\\033[0;31m%s \033[0m\n" "Couldn't source the functions file from $DIR"
    return 1
  fi
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  [ "$1" = "--help" ] && __help
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  local BLOCK="${BLOCK_BUTTON:-$1}"
  local SERVER="${TORRENT_SERVER:-localhost}:9091"
  status() {
    transmission-remote "$SERVER" -l | grep % |
      sed " # This first sed command is to ensure a desirable order with sort
      s/.*Stopped.*/A/g;
      s/.*Seeding.*/Z/g;
      s/.*100%.*/N/g;
      s/.*Idle.*/B/g;
      s/.*Uploading.*/L/g;
      s/.*%.*/M/g" |
      sort -h | uniq -c | sed " # Now we replace the standin letters with icons.
        s/A/🛑/g;
        s/B/⌛️/g;
        s/L/🔼/g;
        s/M/🔽/g;
        s/N/✅/g;
        s/Z/🌱/g" | awk '{print $2, $1}' | sed -e "s/ $//g" | tr '\n' ' '
    }
  case $BLOCK in
    1) myterminal -e mytorrent 2>/dev/null && exitCode=0 || exitCode=1;;
    *) status 2>/dev/null && exitCode=0 || exitCode=1; echo ;;
  esac
  return ${exitCode:-$?}
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# execute function
main "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
exit $?
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# end

